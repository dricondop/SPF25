<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:HeatProductionOptimization.Controls"
        x:Class="HeatProductionOptimization.Controls.MessageBox"
        Width="300" Height="150"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        Title="Message">
    <StackPanel Margin="10" Spacing="10">
        <TextBlock x:Name="MessageText" TextWrapping="Wrap"/>
        <Button Content="OK" HorizontalAlignment="Center" Click="OkButton_Click"/>
    </StackPanel>
</Window>