<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HeatProductionOptimization.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HeatProductionOptimization.Views.HomeWindowView"
             x:DataType="vm:HomeWindowViewModel">
    
    <Design.DataContext>
        <vm:HomeWindowViewModel/>
    </Design.DataContext>
    
    <StackPanel Margin="30" Background="#FFF9F9F9">
        <TextBlock Text="Heat Production Optimizer / Home"
                  FontSize="40"
                  FontWeight="Bold"
                  HorizontalAlignment="Left"
                  Margin="0,0,0,20"
                  Foreground="#333333"/>

        <Grid>
            <UniformGrid Columns="2" Rows="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MinHeight="300">
                <!-- Scenario 1 -->
                <Button Click="Continue_Click"
                        Margin="15,10" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        Background="White"
                        BorderBrush="#3498db"
                        BorderThickness="1"
                        CornerRadius="4">
                    <StackPanel VerticalAlignment="Center" Margin="15">
                        <TextBlock Text="Load Scenario 1" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"
                                   Foreground="#3498db"/>
                        <TextBlock Text="Single heating area, two gas boilers, one oil boiler" 
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Foreground="#666666"/>
                    </StackPanel>
                </Button>
                
                <!-- Scenario 2 -->
                <Button Click="Continue_Click" 
                        Margin="15,10" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"
                        Background="White"
                        BorderBrush="#2ecc71"
                        BorderThickness="1"
                        CornerRadius="4">
                    <StackPanel VerticalAlignment="Center" Margin="15">
                        <TextBlock Text="Load Scenario 2" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"
                                   Foreground="#2ecc71"/>
                        <TextBlock Text="Single heating area, one gas boiler, one oil boiler, one gas motor, one heat pump" 
                                   FontSize="14"
                                   HorizontalAlignment="Center"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Foreground="#666666"/>
                    </StackPanel>
                </Button>
            </UniformGrid>
        </Grid>
    </StackPanel>
</UserControl>