<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:HeatProductionOptimization.ViewModels"
             x:Class="HeatProductionOptimization.Views.ResultDataManagerView"
             x:DataType="vm:ResultDataManagerViewModel">
    <StackPanel Margin="30">
        <TextBlock DockPanel.Dock="Top"
                    Text="Heat Production Optimizer / Result Data Manager"
                    FontSize="40"
                    FontWeight="Bold"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,30"/>
        
         <!--  Bottom Buttons  -->
        <UniformGrid
            Grid.Row="3"
            HorizontalAlignment="Stretch"
            Columns="3">
            <Button
                Margin="5"
                HorizontalAlignment="Stretch"
                Content="Export Data" />

            <Button
                Margin="5"
                HorizontalAlignment="Stretch"
                Content="Print Report" />

            <Button
                Margin="5"
                HorizontalAlignment="Stretch"
                Content="Compare Results" />
        </UniformGrid>
    </StackPanel>
</UserControl>
