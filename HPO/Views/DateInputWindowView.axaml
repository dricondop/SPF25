<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HeatProductionOptimization.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:DateInputWindowViewModel"
             x:Class="HeatProductionOptimization.Views.DateInputWindowView">

    <Design.DataContext>
        <vm:DateInputWindowViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="TextBlock.title">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="0 0 0 20"/>
        </Style>

        <Style Selector="DatePicker, ComboBox, CheckBox">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#5E5E5E"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>

        <Style Selector="Button.submit-button">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20 10"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="0 20 0 0"/>
            <Setter Property="IsEnabled" Value="{Binding CanProceed}"/>
        </Style>

        <Style Selector="Button.submit-button:pointerover">
            <Setter Property="Background" Value="#45a049"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Button.submit-button:disabled">
            <Setter Property="Background" Value="#555555"/>
            <Setter Property="Foreground" Value="#AAAAAA"/>
        </Style>

        <Style Selector="TextBlock.status-message">
            <Setter Property="Foreground" Value="#FFD700"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0 15 0 0"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style Selector="StackPanel.data-selection">
            <Setter Property="Margin" Value="0 0 0 20"/>
            <Setter Property="Spacing" Value="10"/>
        </Style>

        <Style Selector="CheckBox.data-group">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#5E5E5E"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="0 0 0 10"/>
        </Style>

        <Style Selector="CheckBox.data-group:checked">
            <Setter Property="Background" Value="#4E7EB5"/>
            <Setter Property="BorderBrush" Value="#6FA8DC"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="CheckBox.data-group:checked /template/ ContentPresenter">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style Selector="CheckBox.data-group:pointerover">
            <Setter Property="Background" Value="#4A4A4A"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="CheckBox.data-group:checked:pointerover">
            <Setter Property="Background" Value="#5A8FC5"/>
        </Style>
    </UserControl.Styles>

    <Grid Background="#2D2D2D">
        <Border Background="#1E1E1E" CornerRadius="10" Padding="30" BoxShadow="0 5 15 0 #00000050" Margin="40">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="500">
                <TextBlock Text="Select Time Period" Classes="title" HorizontalAlignment="Center"/>

                <StackPanel Orientation="Vertical" Classes="data-selection">
                    <TextBlock Text="Select Data Groups:" Foreground="White" FontWeight="Bold"/>
                    <CheckBox Content="Winter Data" Classes="data-group" 
                             IsChecked="{Binding UseWinterData}"/>
                    <CheckBox Content="Summer Data" Classes="data-group" 
                             IsChecked="{Binding UseSummerData}"/>
                </StackPanel>

                <StackPanel IsVisible="{Binding ShowDateSelection}">
                    <Grid ColumnDefinitions="Auto,1*" RowDefinitions="Auto,Auto,Auto,Auto">
                        <TextBlock Text="Start Date:" Grid.Row="0" Grid.Column="0"
                                   VerticalAlignment="Center" Foreground="White" Margin="0 0 15 10"/>
                        <DatePicker SelectedDate="{Binding StartDate}" Grid.Row="0" Grid.Column="1" Margin="0 0 0 10"/>

                        <TextBlock Text="Start Hour:" Grid.Row="1" Grid.Column="0"
                                   VerticalAlignment="Center" Foreground="White" Margin="0 0 15 10"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Margin="0 0 0 10"
                                  ItemsSource="{Binding HourOptions}"
                                  SelectedIndex="{Binding StartHour}"/>

                        <TextBlock Text="End Date:" Grid.Row="2" Grid.Column="0"
                                   VerticalAlignment="Center" Foreground="White" Margin="0 0 15 10"/>
                        <DatePicker SelectedDate="{Binding EndDate}" Grid.Row="2" Grid.Column="1" Margin="0 0 0 10"/>

                        <TextBlock Text="End Hour:" Grid.Row="3" Grid.Column="0"
                                   VerticalAlignment="Center" Foreground="White" Margin="0 0 15 0"/>
                        <ComboBox Grid.Row="3" Grid.Column="1"
                                  ItemsSource="{Binding HourOptions}"
                                  SelectedIndex="{Binding EndHour}"/>
                    </Grid>
                </StackPanel>

                <Button Content="PROCESS PERIOD" Command="{Binding SubmitDates}"
                        Classes="submit-button" HorizontalAlignment="Center"/>

                <TextBlock Text="{Binding StatusMessage}" Classes="status-message"
                           HorizontalAlignment="Center" TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>