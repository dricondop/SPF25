<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:HeatProductionOptimization.ViewModels"
             x:Class="HeatProductionOptimization.Views.OptimizerView"
             x:DataType="vm:OptimizerViewModel">
    <Grid Margin="30" RowDefinitions="Auto,Auto,Auto,Auto,Auto,*,Auto">
        <TextBlock Grid.Row="0"
                   Text="Heat Production Optimizer / Optimizer"
                   FontSize="40"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,30"/>
        
        <!-- Algorithm Selection Section -->
        <Border Grid.Row="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="20" 
                Margin="0,0,0,20"
                Background="#F5F5F5">
            <StackPanel>
                <TextBlock Text="Algorithm Configuration" 
                           FontSize="22" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,15"/>
                
                <TextBlock Text="Optimization Parameters:" 
                           FontSize="16" 
                           FontWeight="Medium" 
                           Margin="0,0,0,10"/>
                
                <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" Margin="10,0">
                    <CheckBox Grid.Row="0" Grid.Column="0" 
                              Content="Production Cost" 
                              IsChecked="True"
                              Margin="0,5"/>
                    
                    <CheckBox Grid.Row="0" Grid.Column="1" 
                              Content="CO2 Emissions" 
                              IsChecked="True"
                              Margin="0,5"/>
                    
                    <CheckBox Grid.Row="1" Grid.Column="0" 
                              Content="Fuel Consumption" 
                              IsChecked="True"
                              Margin="0,5"/>
                    
                    <CheckBox Grid.Row="1" Grid.Column="1" 
                              Content="Electricity Production/Consumption" 
                              IsChecked="True"
                              Margin="0,5"/>
                    
                    <CheckBox Grid.Row="2" Grid.Column="0" 
                              Content="Prioritize Renewable Sources" 
                              IsChecked="False"
                              Margin="0,5"/>
                </Grid>
                
                <TextBlock Text="Optimization Strategy:" 
                           FontSize="16" 
                           FontWeight="Medium" 
                           Margin="0,15,0,10"/>
                
                <Grid ColumnDefinitions="*,*" Margin="10,0">
                    <RadioButton Grid.Column="0" 
                                 Content="Cost Optimization" 
                                 IsChecked="True"
                                 GroupName="OptimizationStrategy"
                                 Margin="0,5"/>
                    
                    <RadioButton Grid.Column="1" 
                                 Content="Environmental Optimization" 
                                 GroupName="OptimizationStrategy"
                                 Margin="0,5"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Run Optimization Button -->
        <Button Grid.Row="2" 
                Content="Run Optimization" 
                HorizontalAlignment="Center"
                Padding="20,10"
                Margin="0,10,0,30"
                Click="RunOptimization_Click"/>
        
        <!-- Optimization Status -->
        <TextBlock Grid.Row="3" 
                   Text="Status: Ready to optimize" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>
        
        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Spacing="20"
                    Margin="0,20,0,0">
            <Button Content="View Optimization Results" 
                    Padding="15,10"
                    Click="ViewResults_Click"/>
            
            <Button Content="Visualize Data" 
                    Padding="15,10"
                    Click="VisualizeData_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
