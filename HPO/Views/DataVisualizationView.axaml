<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             xmlns:vm="using:HeatProductionOptimization.ViewModels"
             x:Class="HeatProductionOptimization.Views.DataVisualizationView"
             x:DataType="vm:DataVisualizationViewModel">
    <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="30">
        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Heat Production Optimizer / Data Visualization"
                   FontSize="40"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,30"/>
        
        <!-- Visualization Controls -->
        <Border Grid.Row="1" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="20" 
                Margin="0,0,0,20"
                Background="#F5F5F5">
            <StackPanel>
                <TextBlock Text="Visualization Controls" 
                           FontSize="22" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,15"/>
                
                <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto" Margin="0,0,0,15">
                    <!-- Data Selection -->
                    <TextBlock Grid.Row="0" Grid.Column="0" 
                               Text="Data Source:" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Row="0" Grid.Column="1"
                              SelectedIndex="0"
                              HorizontalAlignment="Stretch"
                              Margin="0,0,20,0">
                        <ComboBoxItem>Optimization Results</ComboBoxItem>
                        <ComboBoxItem>Heat Demand Data</ComboBoxItem>
                        <ComboBoxItem>Electricity Price Data</ComboBoxItem>
                        <ComboBoxItem>Production Unit Performance</ComboBoxItem>
                    </ComboBox>
                    
                    <Button Grid.Row="0" Grid.Column="2" 
                            Content="Refresh Data" 
                            Padding="10,5"/>
                    
                    <!-- Visualization Type -->
                    <TextBlock Grid.Row="1" Grid.Column="0" 
                               Text="Chart Type:" 
                               VerticalAlignment="Center"
                               Margin="0,10,10,0"/>
                    
                    <ComboBox Grid.Row="1" Grid.Column="1"
                              SelectedIndex="0"
                              HorizontalAlignment="Stretch"
                              Margin="0,10,20,0">
                        <ComboBoxItem>Line Chart</ComboBoxItem>
                        <ComboBoxItem>Bar Chart</ComboBoxItem>
                        <ComboBoxItem>Pie Chart</ComboBoxItem>
                        <ComboBoxItem>Heat Map</ComboBoxItem>
                        <ComboBoxItem>Scatter Plot</ComboBoxItem>
                    </ComboBox>
                    
                    <Button Grid.Row="1" Grid.Column="2" 
                            Content="Apply" 
                            Padding="10,5"
                            Margin="0,10,0,0"/>
                </Grid>
                
                <Grid ColumnDefinitions="*,*,*,*" Margin="0,5">
                    <CheckBox Grid.Column="0" Content="Show Legend" IsChecked="True" Margin="0,0,5,0"/>
                    <CheckBox Grid.Column="1" Content="Show Labels" IsChecked="True" Margin="0,0,5,0"/>
                    <CheckBox Grid.Column="2" Content="Show Grid Lines" IsChecked="True" Margin="0,0,5,0"/>
                    <CheckBox Grid.Column="3" Content="Auto Scale" IsChecked="True"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Chart/Visualization Area -->
        <Border Grid.Row="2" 
                BorderBrush="#CCCCCC" 
                BorderThickness="1" 
                CornerRadius="5"
                Margin="0,10,0,20"
                Background="White">
            <Grid>
                <!-- Placeholder for LiveChartsCore -->
                <TextBlock Text="Chart Visualization Area"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="24"
                           Opacity="0.5"/>
                           
                <!-- This is where LiveChartsCore will be implemented -->
                <Border BorderBrush="#EEEEEE" 
                        BorderThickness="1" 
                        Margin="20">
                    <Grid>
                        <!-- Y-Axis (left) -->
                        <Border Width="40" 
                                HorizontalAlignment="Left" 
                                Background="#F9F9F9">
                            <TextBlock Text="kWh" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center"
                                       RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <RotateTransform Angle="-90"/>
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Border>
                        
                        <!-- X-Axis (bottom) -->
                        <Border Height="30" 
                                VerticalAlignment="Bottom" 
                                Background="#F9F9F9"
                                Margin="40,0,0,0">
                            <TextBlock Text="Time" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        
                        <!-- Chart Placeholder -->
                        <Canvas Margin="40,0,0,30">
                            <!-- Placeholder visual elements for demonstration -->
                            <Polyline Points="0,150 50,120 100,140 150,90 200,100 250,70 300,85 350,40 400,60 450,30 500,50"
                                      Stroke="Blue"
                                      StrokeThickness="2"/>
                            <Polyline Points="0,180 50,160 100,170 150,140 200,150 250,130 300,145 350,110 400,130 450,90 500,100"
                                      Stroke="Red"
                                      StrokeThickness="2"/>
                        </Canvas>
                    </Grid>
                </Border>
            </Grid>
        </Border>
        
        <!-- Action Buttons -->
        <UniformGrid Grid.Row="3" Columns="4" Margin="0,10,0,0">
            <Button Content="Export Data"
                    Height="80"
                    Margin="5"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"/>
            
            <Button Content="Print Report"
                    Height="80"
                    Margin="5"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"/>
            
            <Button Content="Compare Results"
                    Height="80"
                    Margin="5"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"/>
            
            <Button Content="View Optimizer"
                    Height="80"
                    Margin="5"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Click="ViewOptimizer_Click"/>
        </UniformGrid>
    </Grid>
</UserControl>
