<UserControl
    x:Class="HeatProductionOptimization.Views.DataVisualizationView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:HeatProductionOptimization.ViewModels"
    d:DesignHeight="600"
    d:DesignWidth="800"
    x:DataType="vm:DataVisualizationViewModel"
    mc:Ignorable="d">

    <Grid Margin="30" RowDefinitions="Auto,Auto,*,Auto">

        <!--  Header  -->
        <TextBlock
            Grid.Row="0"
            Margin="0,0,0,30"
            HorizontalAlignment="Left"
            FontSize="40"
            FontWeight="Bold"
            Text="Heat Production Optimizer / Data Visualization" />

        <!--  Visualization Controls  -->
        <Border
            Grid.Row="1"
            Margin="0,0,0,20"
            Padding="20"
            Background="#F5F5F5"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            CornerRadius="5">
            <StackPanel>
                <TextBlock
                    Margin="0,0,0,15"
                    FontSize="22"
                    FontWeight="SemiBold"
                    Text="Visualization Controls" />

                <Grid
                    Margin="0,0,0,15"
                    ColumnDefinitions="Auto,*,Auto"
                    RowDefinitions="Auto,Auto">

                    <!--  Data Source  -->
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        VerticalAlignment="Center"
                        Text="Data Source:" />

                    <ComboBox
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="0,0,20,0"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding AvailableDataSources}"
                        SelectedItem="{Binding SelectedDataSource}" />

                    <!--  Move button to second row and align  -->
                    <Button
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="0,10,0,0"
                        Padding="10,5"
                        HorizontalAlignment="Stretch"
                        Command="{Binding UpdateChartCommand}"
                        Content="Refresh Data" />

                    <!--  Chart Type  -->
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,10,10,0"
                        VerticalAlignment="Center"
                        Text="Chart Type:" />

                    <ComboBox
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,10,20,0"
                        HorizontalAlignment="Stretch"
                        ItemsSource="{Binding FilteredChartTypes}"
                        SelectedItem="{Binding SelectedChartType}" />

                </Grid>

                <!--  Chart Options  -->
                <Grid Margin="0,5" ColumnDefinitions="*,*,*,*">
                    <CheckBox
                        Grid.Column="0"
                        Margin="0,0,5,0"
                        Content="Show Legend"
                        IsChecked="{Binding ShowLegend}" />
                    <CheckBox
                        Grid.Column="1"
                        Margin="0,0,5,0"
                        Content="Show Labels"
                        IsChecked="{Binding ShowDataLabels}" />
                    <CheckBox
                        Grid.Column="2"
                        Margin="0,0,5,0"
                        Content="Show Grid Lines"
                        IsChecked="{Binding ShowGridLines}" />
                    <CheckBox
                        Grid.Column="3"
                        Content="Auto Scale"
                        IsChecked="{Binding AutoScale}" />

                </Grid>

            </StackPanel>
        </Border>

        <!--  Chart  -->
        <Border
            Grid.Row="2"
            Margin="0,10,0,20"
            Background="White"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            CornerRadius="5">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                <Grid>
                    <Border>
                        <lvc:CartesianChart
                            Width="{Binding ChartWidth}"
                            LegendPosition="{Binding ChartLegendPosition}"
                            Series="{Binding CartesianSeries}"
                            XAxes="{Binding XAxes}"
                            YAxes="{Binding YAxes}" />
                    </Border>
                </Grid>
            </ScrollViewer>
        </Border>

        <!--  Bottom Buttons  -->
        <UniformGrid
            Grid.Row="3"
            HorizontalAlignment="Stretch"
            Columns="3">
            <Button
                Margin="5"
                HorizontalAlignment="Stretch"
                Command="{Binding ExportDataCommand}"
                Content="Export Data" />

            <Button
                Margin="5"
                HorizontalAlignment="Stretch"
                Command="{Binding PrintReportCommand}"
                Content="Print Report" />

            <Button
                Margin="5"
                HorizontalAlignment="Stretch"
                Command="{Binding CompareResultsCommand}"
                Content="Compare Results" />
        </UniformGrid>

    </Grid>
</UserControl>
