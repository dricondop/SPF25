<Window
    Background="Transparent"
    ExtendClientAreaToDecorationsHint="True"
    TransparencyLevelHint="AcrylicBlur"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:HeatProductionOptimization.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="HeatProductionOptimization.Views.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    Icon="/Assets/avalonia-logo.ico"
    RequestedThemeVariant="Light"
    Title="Heat Production Optimization">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Panel>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    MaterialOpacity="0.65"
                    TintColor="Black"
                    TintOpacity="1" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <DockPanel>
            <Border Background="#22092C"
                Width="100"
                DockPanel.Dock="Left">
                <StackPanel Spacing="20" 
                      Margin="0,20"
                      VerticalAlignment="Top">
                    <Button Classes="sidebar-button"
                        Command="{Binding HomeWindow}"
                        ToolTip.Tip="Home"
                        HorizontalAlignment="Center">
                        <PathIcon Data="{StaticResource home_regular}" />
                    </Button>
                    <Button Classes="sidebar-button"
                        Command="{Binding AssetManagerWindow}"
                        ToolTip.Tip="Import"
                        HorizontalAlignment="Center">
                        <PathIcon Data="{StaticResource document_regular}" />
                    </Button>
                    <Button Classes="sidebar-button"
                        Command="{Binding ImportJsonWindow}"
                        ToolTip.Tip="Settings"
                        HorizontalAlignment="Center">
                        <PathIcon Data="{StaticResource settings_regular}" />
                    </Button>
                    <Button Classes="sidebar-button"
                        Command="{Binding DateInputWindow}"
                        ToolTip.Tip="Analytics"
                        HorizontalAlignment="Center">
                        <PathIcon Data="{StaticResource chart_regular}" />
                    </Button>
                    <Button Classes="sidebar-button"
                        ToolTip.Tip="Calendar"
                        HorizontalAlignment="Center">
                        <PathIcon Data="{StaticResource calendar_regular}" />
                    </Button>
                    <Button Classes="sidebar-button"
                        ToolTip.Tip="Help"
                        HorizontalAlignment="Center">
                        <PathIcon Data="{StaticResource question_regular}" />
                    </Button>
                </StackPanel>
            </Border>

            <Panel Margin="0,0,0,0">
                <TransitioningContentControl Content="{Binding CurrentPage}" />
            </Panel>
        </DockPanel>
    </Panel>
</Window>
